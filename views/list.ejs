<%- include("partials/head.ejs") %>
<div class="main">
        <h1>To Do List</h1>
        <div class="first">
            <input type="checkbox" id="check">
            <p id="para">Buy Milk</p>
        </div>
        <div class="center">
            <p id="p1"></p>
        </div>
        <div class="next">
            <input type="text" id="txt"placeholder="Enter the tasks" />
            <button class="add">Add</button>
        </div>
</div>
<script>
const btn=document.querySelector(".add");
const content=document.getElementById("txt");
const g=document.querySelector(".center");

btn.addEventListener("click",function(){
    if(content.value===""){
        alert("You have not entered any tasks");
    }  else{
        let checkbox = document.createElement("input");
            checkbox.type = "checkbox";
            checkbox.name = "name";
            checkbox.value = "value";
            checkbox.id = "c2";
        let t=document.createElement("p");
        t.innerHTML=content.value;
        g.appendChild(checkbox);
        g.appendChild(t);
        g.classList.add("center");
        checkbox.addEventListener("click",function(){
            if(checkbox.checked){
                t.style.textDecoration="line-through";
            } else{
                t.style.textDecoration="none";
            }
        })

        
    }
})



const check=document.querySelector("#check");
const t1=document.getElementById("para");
check.addEventListener("click",function(){
    if(check.checked){
          t1.style.textDecoration="line-through";
    } else{
        t1.style.textDecoration="none";
    }
})
</script>
</body>
</html>